@model Panda_Exam.DTOS.Users.RegisterUserDto

@{
    ViewData["Title"] = "Register";
}

<main class="mt-3">
    <h1 class="text-center text-torshia">Register</h1>
    <hr class="bg-panda w-50 hr-2" />

    <form asp-action="Register" method="post" class="mx-auto w-50">
        <div asp-validation-summary="ModelOnly" class="text-warning"></div>

        <div class="form-group">
            <label asp-for="UserName" class="control-label">Username</label>
            <input type="text" asp-for="UserName" class="form-control" min="4" placeholder="Username..." required />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="username" class="text-torshia">Username</label>
            <input type="text" class="form-control" id="username" placeholder="Username..." name="username">
        </div>

        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <input type="password" asp-for="Password" class="form-control" placeholder="Password..." required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="VerifyPassword" class="control-label">Confirm Password</label>
            <input type="password" asp-for="VerifyPassword" class="form-control" placeholder="Confirm Password..." required />
            <span asp-validation-for="VerifyPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input type="email" asp-for="Email" class="form-control" placeholder="Email..." required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="button-holder mt-4 d-flex justify-content-center">
            <button type="submit" class="btn bg-panda text-white">Register</button>
        </div>
    </form>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}