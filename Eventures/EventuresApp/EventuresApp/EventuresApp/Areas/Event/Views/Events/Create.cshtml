@model EventuresApp.Areas.Event.Models.eventCreateDto

@{
    ViewData["Title"] = "Create";
}

<center>
    <div class="w-50">
        <h2>Create Event</h2>
        <hr class="ev-bg hr-th2px" />

        <form method="post">
            <div class="form-row justify-content-between">
                <div class="form-group col-5">
                    <label asp-for="Name" class="font-weight-bold"></label>
                    <input class="form-control" asp-for="Name" placeholder="Event Name..." required />
                </div>
                <div class="form-group col-5">
                    <label asp-for="Place" class="font-weight-bold"></label>
                    <input class="form-control" asp-for="Place" placeholder="Place..." required />
                </div>
            </div>
            <hr class="ev-bg hr-th2px" />
            <div class="form-row justify-content-between">
                <div class="form-group col-5">
                    <label asp-for="Start" class="font-weight-bold"></label>
                    <input class="form-control" type="datetime-local" asp-for="Start" value="2011-08-19T13:45:00"  required />
                </div>
                <div class="form-group col-5">
                    <label asp-for="End" class="font-weight-bold"></label>
                    <input class="form-control" type="datetime-local" asp-for="End" value="2011-08-19T13:45:00" required />
                </div>
            </div>
            <hr class="ev-bg hr-th2px" />
            <div class="form-row justify-content-between">
                <div class="form-group col-5">
                    <label asp-for="TotalTickets" class="font-weight-bold">Total Tickets</label>
                    <input class="form-control" type="number" asp-for="TotalTickets" placeholder="Total Tickets Count..." required />
                </div>
                <div class="form-group col-5">
                    <label asp-for="PricePerTicket" class="font-weight-bold"></label>
                    <input class="form-control" type="number" step="0.01" asp-for="PricePerTicket" placeholder="Ticket price..." required />
                </div>
            </div>

            <hr class="ev-bg hr-th2px" />
            <input type="submit" class="btn-lg ev-bg" value="Create Event" />
        </form>
    </div>
</center>