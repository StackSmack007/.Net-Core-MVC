@model RegisterUserDto
@{
    ViewData["Title"] = "Register User";
}
<center>
    <div class="w-50">
        <h2>Complete Registering with @TempData.Peek("Provider") data taken already.</h2>
        <hr class="ev-bg hr-th2px" />

        <form method="post">
            <div class="form-row justify-content-between">
                <div class="form-group col-5">
                    <label asp-for="UserName" class="font-weight-bold">Username</label>
                    <input class="form-control" asp-for="UserName" placeholder="Username..." required />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group col-5">
                    <label asp-for="Email" class="font-weight-bold"></label>
                    <input type="email" class="form-control" asp-for="Email" placeholder="Email..." required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row justify-content-between">
                <div class="form-group col-5">
                    <label asp-for="Password" class="font-weight-bold"></label>
                    <input class="form-control" type="password" asp-for="Password" placeholder="Password..." required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group col-5">
                    <label asp-for="ConfirmPassword" class="font-weight-bold">Confirm password</label>
                    <input class="form-control" type="password" asp-for="ConfirmPassword" placeholder="Confirm Password..." required />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <hr class="ev-bg hr-th2px" />
            <div class="form-row justify-content-between">
                <div class="form-group col-5">
                    <label asp-for="FirstName" class="font-weight-bold">First Name</label>
                    <input class="form-control" asp-for="FirstName" placeholder="First Name..." required />
                    <span asp-validation-for="FirstName" class="text-info"></span>
                </div>
                <div class="form-group col-5">
                    <label asp-for="LastName" class="font-weight-bold">Last Name</label>
                    <input class="form-control" asp-for="LastName" placeholder="Last Name..." required />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="UCN" class="font-weight-bold"></label>
                <input class="form-control" asp-for="UCN" placeholder="Universal Citizen Number..." required />
                <span asp-validation-for="UCN" class="text-danger"></span>
            </div>
            <hr class="ev-bg hr-th2px" />
            <input type="submit" class="btn-lg ev-bg" value="Register" />
        </form>
    </div>
</center>