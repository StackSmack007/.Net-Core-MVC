@model IEnumerable<EventuresApp.DTOS.Users.RoleUserDTO>

@{
    ViewData["Title"] = "AdministrateUsers";
}

    <center>
        <h1>AdministrateUsers</h1>
        <table class="table w-50">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Role)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => user.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => user.Role)
                        </td>
                        <td>
                            <div class="row d-flex justify-content-start">
                                <form class="col-4" method="post">
                                    <input type="hidden" name="Id" value="@user.Id" />
                                    <input type="hidden" name="Operation" value="1" />
                                    <input class="btn btn-success btn-sm" type="submit" value="Promote">
                                </form>
                                <form class="col-4" method="post">
                                    <input type="hidden" name="Id" value="@user.Id" />
                                    <input type="hidden" name="Operation" value="2" />
                                    <input class="btn btn-danger btn-sm" type="submit" value="Demote">
                                </form>

                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (TempData.ContainsKey("Success"))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Successfull operation!</strong> @TempData["Success"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        @if (TempData.ContainsKey("Error"))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Failed operation!</strong> @TempData["Error"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

    </center>