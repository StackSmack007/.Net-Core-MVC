@model EventuresApp.DTOS.Orders.orderDto[]

@{
    ViewData["Title"] = "AllOrders";
}

<center>
    <div>
        <h2>All Orders</h2>
        <hr class="ev-bg hr-th2px" />
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Event</th>
                    <th scope="col">Customer</th>
                    <th scope="col">Ordered On</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Length; i++)
                {
                    <tr>
                        <th scope="row">@(i + 1) </th>
                        <td>@Model[i].EventName </td>
                        <td>@Model[i].CustomerUserName </td>
                        <td>@Model[i].OrderedOn.ToString("dd-MMM-yyyy hh:mm:ss", CultureInfo.InvariantCulture)</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</center>