@model ChushkaApp.DTOS.Products.ProductDetailsDTO

@{
    ViewData["Title"] = "Edit Product";
    ProductDetailsDTO old =(ChushkaApp.DTOS.Products.ProductDetailsDTO) ViewBag.Old;
}
<main class="mt-3">
    <h1 class="text-center">Edit Product</h1>
    <hr class="bg-secondary half-width" />
    <form class="mx-auto half-width" method="post">
        <input type="hidden" name="Id" value="@old.Id" />
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" value="@old.Name" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" value="@old.Price" required step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea class="form-control" asp-for="Description" rows="3" >@old.Description</textarea>
    
        </div>
        <center>
            <h2>Product Type</h2>
            @{
                string[] productsTypes = { "Food", "Domestic", "Health", "Cosmetic", "Other" };
            }
            <hr class="bg-secondary half-width" />

            <div class="row d-flex justify-content-between w-75 mb-3">
                @foreach (string type in productsTypes)
                {
                    <div class="form-check form-check-inline">
                        @if (@old.Type == type)
                        {
                            <input class="form-check-input" type="radio" asp-for="Type" value="@type" checked />
                        }
                        else
                        {
                            <input class="form-check-input" type="radio" asp-for="Type" value="@type" />
                        }
                        <strong> <label class="form-check-label" asp-for="@type">@type</label></strong>
                    </div>
                }

            </div>
            <input type="submit" class="btn chushka-bg-color" value="Edit" />  &nbsp;  &nbsp; &nbsp; &nbsp; &nbsp;
            <a class="btn chushka-bg-color" asp-controller="Products" asp-action="Details" asp-route-id="@old.Id">Cancell</a>
        </center>
    </form>
</main>