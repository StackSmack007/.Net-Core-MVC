@model ChushkaApp.DTOS.Products.ProductDetailsDTO

@{
    ViewData["Title"] = "Create Product";
}
<main class="mt-3">
    <h1 class="text-center">Create Product</h1>
    <hr class="bg-secondary half-width" />
    <form class="mx-auto half-width" method="post">

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Name..." required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" placeholder="Price..." required step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea class="form-control" asp-for="Description" rows="3" placeholder="Description..."></textarea>
        </div>
        <center>
            <h2>Product Type</h2>
            @{
                string[] productsTypes = { "Food", "Domestic", "Health", "Cosmetic", "Other" };
            }
            <hr class="bg-secondary half-width" />

            <div class="row d-flex justify-content-between w-75 mb-3">
                @foreach (string type in productsTypes)
                {
                    <div class="form-check form-check-inline">
                       @if (type== "Other")
                        {
                        <input class="form-check-input" type="radio" asp-for="Type" value="@type" checked />
                        }
                        else
                        {
                        <input class="form-check-input" type="radio" asp-for="Type" value="@type" />
                        }
                        <strong> <label class="form-check-label" asp-for="@type">@type</label></strong>
                    </div>
                }

            </div>

            <input type="submit" class="btn chushka-bg-color" value="Create" />
        </center>
    </form>
</main>